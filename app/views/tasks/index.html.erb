<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag 'task_completed', '1', task.completed %>
      <%= link_to task.title, show_path(task.id) %>
      <%= link_to "modifier", edit_path(task) %>
        <%= link_to destroy_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Voulez vous vraiment supprimer #{task.title}?"} do %>
         <i class="fa-regular fa-trash-can"></i>
        <% end %>
    </li>
  <% end %>
</ul>

